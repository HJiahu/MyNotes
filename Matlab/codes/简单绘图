%creat a figure
fig = figure('Units','Normalized',...
			'Position',[0.2,0.2,0.5,0.5],...
			'Menu','none');

%creat a axes
ax = axes('Parent',fig,...  %ax的父对象是fig。
			'Units','Normalized');


%绘制正弦图像，正弦图像是对象ax 的子对象。
l = line('Parent',ax,'XData',[0:0.1:3],'YData',sin([0:0.1:3]),'Color','r');

color = 'rgby'
	for k=1:4
	set(l,'Color',color(k));
	pause(1);
end
